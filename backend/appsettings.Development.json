{
  "ConnectionStrings": {
    "MongoDb": "mongodb://localhost:27017/homemate_dev"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long-for-development",
    "Issuer": "HomeMate",
    "Audience": "HomeMate-Users",
    "ExpirationHours": 24
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "HomeMate": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": ["http://localhost:4200", "http://localhost:3000"],
    "AllowCredentials": true
  }
}